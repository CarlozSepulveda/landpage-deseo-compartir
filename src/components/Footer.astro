---
import logo from '../images/logo.webp';
import { Image } from 'astro:assets';
---
<div class="w-full bg-[#809316] min-h-[200px] py-9">
  <Image
    src={logo}
    alt="logo"
    class="h-[15%] w-min m-auto"
  />
  <div class="flex justify-around my-4 text-white-600 m-auto w-2/3 md:w-2/3">
    <span>Participar</span>
    <span class="border border-r-slate-500"></span>
    <span>Compartir</span>
    <span class="border border-r-slate-500"></span>
    <span>Influenciar</span>
  </div>

  <div class="flex justify-evenly my-4 text-white text-sm m-auto w-1/3">
    <span>Facebook</span>
    <span>Instagram</span>
    <span>Twitter</span>
  </div>
  <p class="text-sm text-white m-auto text-center">Contacto: hola@deseocompartir.cl</p>
</div>